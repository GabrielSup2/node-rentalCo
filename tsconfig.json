{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@modules/*": ["modules/*"],
            "@errors/*": ["errors/*"],
            "@shared/*": ["shared2/*"],
            "@config/*": ["config/*"],
            "@utils/*": ["utils/*"]
        },

        "target": "es2016",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "module": "CommonJS",

        "resolveJsonModule": true,
        "outDir": "./dist",

        "esModuleInterop": true,

        "forceConsistentCasingInFileNames": true,

        "skipLibCheck": true
    }
}
